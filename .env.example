# Configuración de entorno para SlideMotion
# Copia este archivo como .env y personaliza según tu entorno

# Configuración básica
SECRET_KEY=your-secret-key-here
# Desarrollo: DEBUG=True | Producción: DEBUG=False
DEBUG=True
# Desarrollo: localhost,127.0.0.1 | Producción: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de datos
# Desarrollo: sqlite3 (comentar las siguientes) | Producción: postgresql
DB_ENGINE=django.db.backends.postgresql
DB_NAME=slidemotion_db
DB_USER=slidemotion_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Idioma y zona horaria
LANGUAGE_CODE=es-es
TIME_ZONE=Europe/Madrid

# Email
# Desarrollo: console | Producción: smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@slidemotion.com

# Subida de archivos
# Desarrollo: 100MB | Producción: 50MB
MAX_UPLOAD_SIZE=104857600
# Desarrollo: pdf,ppt,pptx | Producción: pdf
ALLOWED_UPLOAD_EXTENSIONS=pdf,ppt,pptx

# Seguridad
# Desarrollo: False | Producción: True
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
# Producción: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# Cache Redis (solo producción)
REDIS_URL=redis://127.0.0.1:6379/1

# AWS S3 (opcional, solo producción)
USE_S3=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Monitoreo de errores (opcional, solo producción)
SENTRY_DSN=https://your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1

# Entorno (local, staging, production)
ENVIRONMENT=local

# Logging
DJANGO_LOG_LEVEL=INFO
LOG_FILE=/path/to/your/log/django.log

# Administradores
ADMINS=Admin:admin@slidemotion.com