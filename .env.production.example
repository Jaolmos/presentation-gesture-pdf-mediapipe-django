# Configuración de entorno para SlideMotion - PRODUCCIÓN
# Copia este archivo como .env en el servidor de producción
# IMPORTANTE: Cambiar todos los valores por secretos reales

# Configuración básica PRODUCCIÓN
SECRET_KEY=generar-secret-key-muy-segura-y-larga-para-produccion
DEBUG=False
ALLOWED_HOSTS=tudominio.com,www.tudominio.com

# Base de datos PostgreSQL PRODUCCIÓN
DB_ENGINE=django.db.backends.postgresql
DB_NAME=slidemotion_db_prod
DB_USER=slidemotion_prod_user
DB_PASSWORD=password-muy-segura-para-produccion
DB_HOST=localhost
DB_PORT=5432

# Cache y message broker Redis PRODUCCIÓN
REDIS_URL=redis://localhost:6379/0

# Configuración de Celery PRODUCCIÓN
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Idioma y zona horaria
LANGUAGE_CODE=es-es
TIME_ZONE=Europe/Madrid

# Email PRODUCCIÓN (configurar SMTP real)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.tudominio.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@tudominio.com
EMAIL_HOST_PASSWORD=password-email-produccion
DEFAULT_FROM_EMAIL=noreply@tudominio.com

# Configuración de archivos PRODUCCIÓN
MAX_UPLOAD_SIZE=52428800
ALLOWED_UPLOAD_EXTENSIONS=pdf

# Configuración de logs PRODUCCIÓN
DJANGO_LOG_LEVEL=WARNING

# Entorno
ENVIRONMENT=production

# Seguridad PRODUCCIÓN (CRÍTICO)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
CSRF_TRUSTED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# AWS S3 (opcional para archivos estáticos y media)
USE_S3=False
AWS_ACCESS_KEY_ID=tu-access-key-s3
AWS_SECRET_ACCESS_KEY=tu-secret-key-s3
AWS_STORAGE_BUCKET_NAME=tu-bucket-slidemotion
AWS_S3_REGION_NAME=eu-west-1

# Monitoreo de errores (opcional - Sentry)
SENTRY_DSN=https://tu-sentry-dsn-para-monitoreo
SENTRY_TRACES_SAMPLE_RATE=0.1

# Administradores (reciben emails de errores)
ADMINS=Admin:admin@tudominio.com