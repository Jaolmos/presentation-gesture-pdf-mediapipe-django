# Configuración de entorno para SlideMotion - PRODUCCIÓN
# Copia este archivo como .env en el servidor de producción
# IMPORTANTE: Cambiar todos los valores por secretos reales

# ============================================
# CONFIGURACIÓN BÁSICA DE DJANGO
# ============================================
# Generate a secure key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=generate-a-very-secure-and-long-secret-key-for-production
DEBUG=False
ALLOWED_HOSTS=tudominio.com,www.tudominio.com
ENVIRONMENT=production

# ============================================
# DOMINIO Y TRAEFIK
# ============================================
DOMAIN=tudominio.com
ACME_EMAIL=admin@tudominio.com

# Dashboard de Traefik - Generar con: htpasswd -nb admin tu-password-segura
# Ejemplo: admin:$apr1$xyz...
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$hash-generado-con-htpasswd

# ============================================
# BASE DE DATOS POSTGRESQL
# ============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=slidemotion_db_prod
DB_USER=slidemotion_prod_user
DB_PASSWORD=your-database-password-here-change-this
DB_HOST=db
DB_PORT=5432

# ============================================
# REDIS - CACHE Y MESSAGE BROKER
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# CELERY - PROCESAMIENTO ASÍNCRONO
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Flower - Monitoreo de Celery (usuario:password)
FLOWER_BASIC_AUTH=admin:your-flower-password-here-change-this

# ============================================
# IDIOMA Y ZONA HORARIA
# ============================================
LANGUAGE_CODE=es-es
TIME_ZONE=Europe/Madrid

# ============================================
# EMAIL (SMTP PRODUCCIÓN)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.tudominio.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@tudominio.com
EMAIL_HOST_PASSWORD=your-email-password-here-change-this
DEFAULT_FROM_EMAIL=noreply@tudominio.com

# ============================================
# CONFIGURACIÓN DE ARCHIVOS
# ============================================
MAX_UPLOAD_SIZE=52428800
ALLOWED_UPLOAD_EXTENSIONS=pdf

# ============================================
# LOGS
# ============================================
DJANGO_LOG_LEVEL=WARNING

# ============================================
# SEGURIDAD (CRÍTICO PARA PRODUCCIÓN)
# ============================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
CSRF_TRUSTED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# ============================================
# ALMACENAMIENTO DE ARCHIVOS
# ============================================
# En VPS DigitalOcean, los archivos se guardan en volúmenes Docker locales
# No se requiere configuración adicional - los volúmenes persisten los datos

# ============================================
# MONITOREO DE ERRORES (OPCIONAL - Sentry)
# ============================================
SENTRY_DSN=https://tu-sentry-dsn-para-monitoreo
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# ADMINISTRADORES
# ============================================
# Formato: Nombre:email (reciben emails de errores)
ADMINS=Admin:admin@tudominio.com